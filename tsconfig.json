{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    // TODO: fix gatsby-plugin-google-analytics
    "skipLibCheck": true,
    "esModuleInterop": true,
    "jsx": "react",
    "types": [
      "@emotion/core"
    ]
  },
  "exclude": [
    "**/*.ssr.ts",
    "./node_modules/gatsby-plugin-google-analytics/**/*"
  ]
}